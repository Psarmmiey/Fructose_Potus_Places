<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_column="0"
    app:layout_columnSpan="4"
    app:layout_row="0"
    tools:context="com.psarmmiey.weatherviewer.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/quickSearchCard"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/background_light">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:scrollbarSize="3dp">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="5"
                    android:rowCount="2">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/bankFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@color/colorQuick"
                        android:clickable="true"
                        android:padding="10dp"
                        app:elevation="0dp"
                        app:fabSize="normal"
                        app:layout_column="0"
                        app:layout_row="2"
                        app:rippleColor="?attr/actionModeSplitBackground"
                        app:srcCompat="@drawable/ic_local_atm_black_24px" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/restaurantFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@color/colorQuick"
                        android:clickable="true"
                        android:padding="10dp"
                        app:elevation="0dp"
                        app:fabSize="normal"
                        app:layout_column="1"
                        app:layout_row="2"
                        app:rippleColor="?attr/actionModeSplitBackground"
                        app:srcCompat="@drawable/ic_restaurant_black_24px" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/schoolFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@color/colorQuick"
                        android:clickable="true"
                        android:padding="10dp"
                        app:elevation="0dp"
                        app:fabSize="normal"
                        app:layout_column="2"
                        app:layout_row="2"
                        app:rippleColor="?attr/actionModeSplitBackground"
                        app:srcCompat="@drawable/school" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/hospitalFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@color/colorQuick"
                        android:clickable="true"
                        android:padding="10dp"
                        app:elevation="0dp"
                        app:fabSize="normal"
                        app:layout_column="3"
                        app:layout_row="2"
                        app:rippleColor="?attr/actionModeSplitBackground"
                        app:srcCompat="@drawable/hospital" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/mallFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@color/colorQuick"
                        android:clickable="true"
                        android:padding="10dp"
                        app:elevation="0dp"
                        app:fabSize="normal"
                        app:layout_column="4"
                        app:layout_row="2"
                        app:rippleColor="?attr/actionModeSplitBackground"
                        app:srcCompat="@drawable/gas_station" />

                </GridLayout>
            </HorizontalScrollView>

        </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/loadingBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="9dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateTintMode="multiply"
            android:layerType="software"
            android:progressTintMode="multiply"
            android:visibility="gone" />

        <ListView
            android:id="@+id/weatherListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="false"
            android:clickable="true"
            android:contextClickable="true"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:longClickable="false"
            android:pointerIcon="none"
            android:smoothScrollbar="true" />

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:elegantTextHeight="true"
            android:hapticFeedbackEnabled="true"
            android:hint="@string/hint_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:soundEffectsEnabled="true">
            </EditText>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
