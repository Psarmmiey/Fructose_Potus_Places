                    android:layout_gravity="center_vertical|center"
                    android:layout_row="2"
                    android:adjustViewBounds="true"
                    android:background="@color/colorQuick"
                    android:baselineAlignBottom="true"
                    android:clickable="true"
                    android:drawingCacheQuality="auto"
                    android:foregroundGravity="center_vertical|center_horizontal|center"
                    android:padding="10dp"
                    android:saveEnabled="true"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:elevation="0dp"
                    app:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|center"
                    app:rippleColor="?attr/actionModeSplitBackground"
                    app:srcCompat="@drawable/hotel_icon"
                    app:useCompatPadding="false"/>

