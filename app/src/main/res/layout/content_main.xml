                    android:foregroundGravity="center_vertical|center_horizontal|center"
                    android:padding="10dp"
                    android:saveEnabled="true"
                    android:scaleType="fitCenter"
                    android:soundEffectsEnabled="true"
                    app:elevation="0dp"
                    app:rippleColor="?attr/actionModeSplitBackground"
                    app:srcCompat="@drawable/ic_cast_light"
                    app:useCompatPadding="false"/>

                <TextView
                    android:id="@+id/mosque_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_row="5"
                    android:elevation="6dp"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center"
                    android:padding="5dp"
                    android:scrollbarSize="2dp"
                    android:text="@string/mosque"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:typeface="normal"
                    app:layout_gravity="top|center_vertical|center" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/post_office_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical|center"
                    android:layout_row="4"
                    android:adjustViewBounds="true"
                    android:background="@color/colorQuick"
                    android:baselineAlignBottom="true"
